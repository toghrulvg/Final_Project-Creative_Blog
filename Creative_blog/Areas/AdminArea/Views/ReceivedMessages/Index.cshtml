@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="container-fluid my-3 mx-3">
        <div class="table-responsive pt-3">
            
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Date
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Fullname
                        </th>
                        <th>
                            Message
                        </th>


                        <th style="text-align: center;">
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TouchMessages)
                    {
                        <tr>
                            <td>
                                @item.Date
                            </td>

                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Fullname
                            </td>
                            <td>
                                @item.Message
                            </td>



                            

                            <td style="text-align: center;">
                                <form style="display: inline-block;" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i>R</button>
                                </form>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>



